inline_list()
  list-style none
  margin-top 0
  margin-bottom 0
  margin-left: 0
  margin-right 0
  overflow hidden
  padding 0

  &>li
    display block
    float left
    list-style none
    margin-left 1rem

.inline_list
  inline_list()


// forms

.form_control
  display block
  width 100%
  height 40px
  padding 6px 12px
  font-size 1rem
  line-height 1.5
  color: #555
  background-color #fff
  background-image none
  border 1px solid #ccc
  border-radius 2px
