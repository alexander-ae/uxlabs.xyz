@import 'nib'
@import '../../../node_modules/jeet/styl'

global-reset()
reset-html5()

@import 'constants.styl'
@import 'typo.styl'
@import 'base.styl'

header
  width 100%
  background $color_1
  color $color_2
  padding 2rem 0

  .header_container
    center(960px)

  .logo
    column(3/12)

  nav
    column(7/12)

  .nav_list
    inline_list()
    margin-top 28px

    li
      margin-bottom 5px
      margin-right 2rem

  .nav-link
    color $color_2
    text-decoration none
    font-size 1.5rem
    font_primary()
    font-weight bold

    &:hover
      border-bottom 2px solid $color_3

  .search
    column(2/12)

    input
      width 100%
      height 32px
      margin-top 20px
      margin-right 5px
